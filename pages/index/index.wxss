.top {
  display: flex;
  justify-content: space-between;
  margin: 40rpx;
  position: relative;
}
.help {
  padding: 14rpx 20rpx;
  border: 4rpx solid #ccc;
  font-size: 24rpx;
  border-radius: 14rpx;
  position: absolute;
  right: 80rpx;
  }
.top image {
  display:block;
  height: 40rpx;
  width: 40rpx;
  position: relative;
  top: 14rpx
}
.none {
  text-align: center;
  margin-top: 160rpx;
  font-size: 30rpx;
}
.all {
  display: flex;
  margin: 20rpx 40rpx;
  flex-wrap: wrap;
}
.content {
  flex: 0 0 30%;
  margin-right: 5%;
  margin-bottom: 20rpx;
  position: relative;
  padding-bottom: 44rpx;
  font-size: 30rpx;
}
.mar {
  margin-right: 0;
}
.content .img {
  width: 100%;
  display: block;
  height: 300rpx;
}
.content .icon {
  position: absolute;
  width: 60rpx;
  height: 60rpx;
  display: block;
  z-index: 99;
  right: -20rpx;
  top: -20rpx;
  background: white;
  border-radius: 50%;
}
.index {
  position: absolute;
  bottom: 0;
}
.title {
  display: -webkit-box !important;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}